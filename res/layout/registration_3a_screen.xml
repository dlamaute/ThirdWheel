<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <ImageView 
                android:id="@+id/person_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="30sp"
                android:layout_marginBottom="15sp"
                android:src="@drawable/person_1"/>
            
            <TextView
                android:id="@+id/desc_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/person_1"
                android:layout_marginTop="18sp"
                android:layout_marginLeft="12sp"
                android:textColor="@color/red"
                android:textSize="22sp"
                android:text="Describe"/>  

            <EditText
                android:id="@+id/eye_color_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_below="@id/person_1"
                android:background="@drawable/eye_color"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/hair_color_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/hair_color"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/eye_color_1"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            
            <EditText 
                android:id="@+id/age_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/age"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/hair_color_1"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
            
            <EditText 
                android:id="@+id/height_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/height"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/age_1"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
            
            <EditText 
                android:id="@+id/nationality_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/nationality"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/height_1"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
            
            <EditText 
                android:id="@+id/body_type_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/body_type"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/nationality_1"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
            
            <ImageView 
                android:id="@+id/person_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:layout_marginLeft="30sp"
                android:layout_marginBottom="15sp"
                android:src="@drawable/person_2"
                android:layout_below="@id/body_type_1"/>
            
            <TextView
                android:id="@+id/desc_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/person_2"
                android:layout_below="@id/body_type_1"
                android:layout_marginTop="33sp"
                android:layout_marginLeft="12sp"
                android:textColor="@color/red"
                android:textSize="22sp"
                android:text="Describe"/>
            
            <EditText
                android:id="@+id/eye_color_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_below="@id/person_2"
                android:background="@drawable/eye_color"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/hair_color_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/hair_color"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/eye_color_2"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            
            <EditText 
                android:id="@+id/age_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/age"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/hair_color_2"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
            
            <EditText 
                android:id="@+id/height_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/height"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/age_2"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
            
            <EditText 
                android:id="@+id/nationality_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/nationality"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/height_2"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
            
            <EditText 
                android:id="@+id/body_type_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/body_type"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/nationality_2"
                android:imeOptions="actionDone"
                android:inputType="textNoSuggestions"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
            
            <ImageView
                android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/body_type_2"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:src="@drawable/line"/>
            
            <TextView
                android:id="@+id/important"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/line"
                android:text="@string/important"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:textStyle="bold"/>
            
            <TextView
                android:id="@+id/noBS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/important"
                android:text="@string/no_BS"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"/>
            
            <Spinner
                android:id="@+id/desires"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/noBS"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:paddingLeft="10sp"
                android:background="@drawable/dropdown" />
            
            <ImageButton
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/desires"
                android:layout_marginTop="25sp"
                android:layout_marginBottom="50sp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/submit_switch"/>
            
        </RelativeLayout>
        
    </ScrollView>

</LinearLayout>
