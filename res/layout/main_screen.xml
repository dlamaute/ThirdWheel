<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/usertitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dist"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_marginTop="25sp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="x miles away"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_marginTop="25sp"
            android:layout_weight="1"
            android:background="@color/red"
            android:gravity="center"
            android:text="[username]"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/profileImg"
        android:layout_width="fill_parent"
        android:layout_height="180sp"
        android:layout_below="@id/usertitle"
        android:src="@drawable/big_pic_sel" />

    <TextView
        android:id="@+id/prof_eyes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImg"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="15sp"
        android:text="Eyes "
        android:textColor="@color/red"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/prof_eyes_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/prof_eyes"
        android:layout_toRightOf="@id/prof_eyes"
        android:text="@string/sign_in"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/prof_hair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prof_eyes"
        android:layout_marginLeft="20sp"
        android:text="Hair color "
        android:textColor="@color/red"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/prof_hair_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/prof_hair"
        android:layout_toRightOf="@id/prof_hair"
        android:text="@string/sign_in"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/prof_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prof_hair"
        android:layout_marginLeft="20sp"
        android:text="Age "
        android:textColor="@color/red"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/prof_age_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/prof_age"
        android:layout_toRightOf="@id/prof_age"
        android:text="@string/sign_in"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/prof_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prof_age"
        android:layout_marginLeft="20sp"
        android:text="Height "
        android:textColor="@color/red"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/prof_height_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/prof_height"
        android:layout_toRightOf="@id/prof_height"
        android:text="@string/sign_in"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/prof_nationality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prof_height"
        android:layout_marginLeft="20sp"
        android:text="Nationality "
        android:textColor="@color/red"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/prof_nationality_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/prof_nationality"
        android:layout_toRightOf="@id/prof_nationality"
        android:text="@string/sign_in"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/prof_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prof_nationality"
        android:layout_marginLeft="20sp"
        android:text="Body Type "
        android:textColor="@color/red"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/prof_body_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/prof_body"
        android:layout_toRightOf="@id/prof_body"
        android:text="@string/sign_in"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/prof_looking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prof_body"
        android:layout_marginLeft="20sp"
        android:text="Looking For "
        android:textColor="@color/red"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/prof_looking_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/prof_looking"
        android:layout_toRightOf="@id/prof_looking"
        android:text="@string/sign_in"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/prof_looking"
        android:layout_marginTop="15sp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/pass"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:background="@drawable/pass" />

        <ImageButton
            android:id="@+id/like"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="20sp"
            android:layout_weight="1"
            android:background="@drawable/like" />
    </LinearLayout>

</RelativeLayout>